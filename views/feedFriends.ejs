              />
              <div>
                <p class="suggestion-item-username">catmaster21</p>
                <span class="suggestion-item-user-description"
                  >Followed by max12</span
                >
              </div>
            </div>
            <div class="suggestion-item d-flex">
              <img
                class="suggestion-profile-icon"
                src="/images/uploaded/profile/default.png"
              />
              <div>
                <p class="suggestion-item-username">catmaster21</p>
                <span class="suggestion-item-user-description"
                  >Followed by max12</span
                >
              </div>
            </div>
            <div class="suggestion-item d-flex">
              <img
                class="suggestion-profile-icon"
                src="/images/uploaded/profile/default.png"
              />
              <div>
                <p class="suggestion-item-username">catmaster21</p>
                <span class="suggestion-item-user-description"
                  >Followed by max12</span
                >
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>
