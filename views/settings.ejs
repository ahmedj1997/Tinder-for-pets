
<%- include('./components/includes/navbar.ejs')%>
    <main class="home-page">
      <div class="container my-5">
        <div class="row">
          <div class="col-3">
            <div class="box-section p-4">
             <%- include('./components/settings/menu.ejs') %>
            </div>
            <div class="footer p-2">
              <ul>
                <li><a href="#">About</a></li>
                <li><a href="#">Contact</a></li>
                <li><a href="#">Terms</a></li>
                <li><a href="#">Privacy</a></li>
              </ul>
              <p>Petinder &copy; 2022</p>
            </div>
          </div>
          <div class="col-9">
            <div class="box-section p-4">
              <h5>Display Photo</h5>
              <form
                method="post"
                action="/profileimg/update?_method=PATCH"
                enctype="multipart/form-data"
              >
                <div class="row my-3 p-2">
                  <div class="col-6">
                    <img class="settings-profile-img"
                      src="/images/uploaded/profile/<%= user.profileImage %>"
                    />
                    <input
                      type="file"
                      class="form-control"
                      name="profileImage"
                    />
                    <input
                      type="hidden"
                      name="userId"
                      value="<%= user._id %>"
                    />
                    <button class="mt-3 btn btn-primary w-100" type="submit">
                      Update
                    </button>
                  </div>
                </div>
              </form>
              <form method="post" action="/settings/update?_method=PATCH">
                <h5>Profile</h5>
                <div class="row my-3 p-2">
                  <div class="col-6">
                    <label for="" class="form-label">Username</label>
                    <input
                      type="text"
                      class="form-control"
                      name="userName"
                      id=""
                      aria-describedby="emailHelpId"
                      value="<%= user.userName %>"
                    />
                  </div>
                  <div class="col-6">
                    <label for="" class="form-label">Pet Name</label>
                    <input
                      type="text"
                      class="form-control"
                      name="petName"
                      id=""
                      aria-describedby="emailHelpId"
                      value="<%= user.petName %>"
                    />
                  </div>
                </div>
                <h5>Location</h5>
                <div class="row my-3 p-2">
                  <div class="col-6">
                    <div class="mb-0">
                      <label for="" class="form-label">Country</label>
                      <select class="form-select" name="country" id="">
                        <option selected><%= user.country %></option>
                      </select>
                    </div>
                  </div>
                  <div class="col-6">
                    <div class="mb-0">
                      <label for="" class="form-label">City</label>
                      <select class="form-select" name="city" id="">
                        <option selected><%= user.city %></option>
                      </select>
                    </div>
                  </div>
                </div>
                <h5>Change Password</h5>
                <div class="row mt-3 p-2">
                  <div class="col-6">
                    <label for="" class="form-label">Password</label>
                    <input
                      name="password"
                      type="password"
                      class="form-control"
                    />
                  </div>
                  <div class="col-6">
                    <label for="" class="form-label">Password</label>
                    <input
                      name="passwordRepeat"
                      type="password"
                      class="form-control"
                    />
                  </div>
                </div>
                <hr />
                <button class="btn btn-primary btn-lg w-100" type="Submit">Update Info</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </main>